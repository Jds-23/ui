{
  "name": "lido-ui-components",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "start-storybook -p 5555 -s .storybook/public",
    "build-storybook": "build-storybook -s .storybook/public",
    "build": "yarn workspaces foreach -piv --topological-dev --exclude lido-ui-components run build:scripts",
    "build:package": "yarn workspace @lidofinance/${0} run build:scripts",
    "build:scripts": "cd $INIT_CWD && yarn run g:clean && yarn run g:types && yarn run g:build:esm && yarn run g:build:cjs",
    "g:clean": "cd $INIT_CWD && rimraf dist",
    "g:build:esm": "cd $INIT_CWD && BABEL_ESM=true babel --extensions '.js,.jsx,.ts,.tsx' --root-mode upward src --out-dir dist/esm --ignore '**/*.stories.js','**/*.stories.jsx','**/*.stories.ts','**/*.stories.tsx','**/*.test.js','**/*.test.jsx','**/*.test.ts','**/*.test.tsx'",
    "g:build:cjs": "cd $INIT_CWD && BABEL_ESM=false babel --extensions '.js,.jsx,.ts,.tsx' --root-mode upward src --out-dir dist/cjs --ignore '**/*.stories.js','**/*.stories.jsx','**/*.stories.ts','**/*.stories.tsx','**/*.test.js','**/*.test.jsx','**/*.test.ts','**/*.test.tsx'",
    "g:types": "cd $INIT_CWD && tsc",
    "test": "jest",
    "test:coverage": "jest coverage",
    "publish:submit": "yarn workspaces foreach -piv --topological-dev --exclude lido-ui-components run publish:npm",
    "publish:npm": "cd $INIT_CWD && npm publish --tolerate-republish",
    "lint": "eslint --ext ts,tsx,js,jsx --ignore-path .gitignore .",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/cli": "7.13.16",
    "@babel/core": "7.14.2",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-private-methods": "7.13.0",
    "@babel/plugin-proposal-private-property-in-object": "7.14.0",
    "@babel/preset-env": "7.14.2",
    "@babel/preset-react": "7.13.13",
    "@babel/preset-typescript": "7.13.0",
    "@storybook/addon-docs": "6.2.9",
    "@storybook/addon-essentials": "6.2.9",
    "@storybook/addons": "6.2.9",
    "@storybook/react": "6.2.9",
    "@storybook/storybook-deployer": "2.8.8",
    "@storybook/theming": "6.2.9",
    "@types/jest": "26.0.23",
    "@types/react": "17.0.5",
    "@types/react-dom": "17.0.5",
    "@types/react-is": "17.0.0",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "babel-core": "6.26.3",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "babel-plugin-styled-components": "1.12.0",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-react": "7.23.2",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "jest-haste-map": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest-styled-components": "7.0.4",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-is": "17.0.2",
    "rimraf": "3.0.2",
    "storybook-dark-mode": "1.0.8",
    "styled-components": "5.3.0",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "webpack": "5.37.0"
  },
  "lint-staged": {
    "./**/*.{ts,tsx,js,jsx}": [
      "eslint --ignore-path .gitignore --max-warnings=0",
      "jest --bail --findRelatedTests"
    ],
    "./**/*.{ts,tsx,js,jsx,md,json}": [
      "prettier --write"
    ]
  }
}
